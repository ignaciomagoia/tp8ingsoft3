# Si usás Vite: usa VITE_API_URL; si usás CRA: REACT_APP_API_URL (ver build-arg).
FROM node:20-alpine AS build
WORKDIR /app
COPY frontend/package*.json ./
RUN npm ci
COPY frontend/ .
# Recibe el API URL en build time
ARG VITE_API_URL
ARG REACT_APP_API_URL
ENV VITE_API_URL=$VITE_API_URL
ENV REACT_APP_API_URL=$REACT_APP_API_URL
RUN npm run build || npm run build:prod

FROM nginx:alpine
COPY --from=build /app/dist/ /usr/share/nginx/html 2>/dev/null || true
COPY --from=build /app/build/ /usr/share/nginx/html 2>/dev/null || true
EXPOSE 80
