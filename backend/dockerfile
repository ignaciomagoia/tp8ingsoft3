# --- build ---
FROM golang:1.24 AS build
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/app ./...

# --- runtime ---
FROM alpine:3.20
RUN adduser -D -H app && apk add --no-cache ca-certificates
USER app
WORKDIR /app
COPY --from=build /out/app /app/app
ENV PORT=8080
EXPOSE 8080
CMD ["/app/app"]
