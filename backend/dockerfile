# syntax=docker/dockerfile:1

FROM --platform=$BUILDPLATFORM golang:1.22-alpine AS builder
WORKDIR /src

COPY go.mod go.sum ./
RUN go mod download

COPY . .

ARG TARGETOS=linux
ARG TARGETARCH=amd64
RUN CGO_ENABLED=0 GOOS=$TARGETOS GOARCH=$TARGETARCH go build -ldflags="-s -w" -o /out/tp8-backend ./

FROM alpine:3.20
RUN addgroup -S app && adduser -S app -G app \
  && apk add --no-cache ca-certificates

WORKDIR /app
COPY --from=builder /out/tp8-backend ./tp8-backend

ENV PORT=8080
EXPOSE 8080

USER app
ENTRYPOINT ["/app/tp8-backend"]
